{
  "rules": {
    ".read": false,
    ".write": false,
    "v2": {
      "rig-profile": {
        ".read": "auth != null"
      },
      "algorithm": {
        ".read": "auth != null"
      },
      "pool": {
        ".read": "auth != null"
      },
      "user": {
        "$uid": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid",
          "defaults": {
            "rig-profile": {
              ".validate": "newData.isString() && data.parent().parent().child('rig-profile').child(newData.val()).exists()"
            },
            "$other": {
              ".validate": false
            }
          },
          "rig-profile": {
            "$uuid": {
              ".validate": "$uuid.length < 50",
              "name": {
                ".validate": "newData.isString() && newData.val().length < 50"
              },
              "hashrates": {
                "$algo": {
                  ".validate": "root.child('v2/algorithm').child($algo).exists() && newData.isNumber()"
                }
              },
              "$other": {
                ".validate": false
              }
            }
          },
          "$other": {
            ".validate": false
          }
        }
      }
    }
  }
}
